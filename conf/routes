# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /								Application.index
GET		/login							Application.login
POST	/proclog						Application.processLogin
GET		/register						Application.register
POST	/procreg						Application.processRegistration
GET		/fbauth							Application.facebookAuth

GET		/logout							Application.logout
GET		/test							Application.test
GET		/test2							Application.test2

# Event push
GET		/waitevents						Application.waitEvents
POST	/subscribe						Application.subscribe
POST	/unsubscribe					Application.unsubscribe
POST    /sendevent             		 	Application.sendEvent

# WS Test
POST	/webservice/soapnotifendpoint				WebService.soapNotifEndPoint
GET		/webservice/notif							WebService.notif
GET		/webservice/subscribe						WebService.subscribe

# Ignore favicon requests
GET     /favicon.ico                    404

# Map static resources from the /app/public folder to the /public path
GET     /public/                        staticDir:public

# Catch all
*       /{controller}/{action}			{controller}.{action}